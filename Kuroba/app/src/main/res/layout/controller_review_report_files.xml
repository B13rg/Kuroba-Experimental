<?xml version="1.0" encoding="utf-8"?>
<com.github.k1rakishou.chan.ui.theme.widget.TouchBlockingLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.github.k1rakishou.chan.ui.theme.widget.ColorizableListView
        android:id="@+id/review_reports_controller_reports_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="64dp">

        <com.github.k1rakishou.chan.ui.theme.widget.ColorizableBarButton
            android:id="@+id/review_reports_controller_delete_reports_button"
            android:layout_width="128dp"
            android:layout_height="48dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="8dp"
            android:text="@string/delete" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <com.github.k1rakishou.chan.ui.theme.widget.ColorizableBarButton
            android:id="@+id/review_reports_controller_send_reports_button"
            android:layout_width="128dp"
            android:layout_height="48dp"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="8dp"
            android:text="@string/send" />

    </LinearLayout>

</com.github.k1rakishou.chan.ui.theme.widget.TouchBlockingLinearLayout>