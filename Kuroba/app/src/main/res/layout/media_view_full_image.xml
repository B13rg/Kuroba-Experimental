<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/movable_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.github.k1rakishou.chan.features.media_viewer.media_view.ThumbnailMediaView
            android:id="@+id/thumbnail_media_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible" />

        <com.github.k1rakishou.chan.ui.view.CustomScaleImageView
            android:id="@+id/actual_image_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="invisible" />

    </FrameLayout>

    <com.github.k1rakishou.chan.ui.view.ChunkedLoadingBar
        android:id="@+id/loading_bar"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:layout_gravity="top"
        android:visibility="gone"
        tools:visibility="visible" />

</FrameLayout>